{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types"],
    "lib": [
      "ES2021.Promise",
      "DOM",
    ]
  },
}